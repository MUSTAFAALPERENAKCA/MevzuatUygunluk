@model MevzuatUygunluk.Models.GeneratedRequirements
@{
    ViewData["Title"] = "Mevzuat Şartları";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Mevzuat Şartları (@(Model?.Requirements?.Count ?? 0))</h3>
    <form asp-action="Regenerate" asp-controller="Requirements" method="post">
        @Html.AntiForgeryToken()
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-arrow-repeat me-1"></i>Şartları Yenile
        </button>
    </form>
</div>

@if (Model?.Requirements?.Any() == true)
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Field</th>
                    <th>Section</th>
                    <th>Şart</th>
                    <th>Madde</th>
                    <th>Zorunlu</th>
                    <th>Min..Max</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Requirements.Count; i++)
                {
                    var r = Model.Requirements[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@(string.IsNullOrWhiteSpace(r.Field) ? "-" : r.Field)</td>
                        <td>@(string.IsNullOrWhiteSpace(r.Section) ? "-" : r.Section)</td>
                        <td>@r.Requirement</td>
                        <td>@(string.IsNullOrWhiteSpace(r.Article) ? "-" : r.Article)</td>
                        <td>@(r.MustHave ? "Evet" : "Hayır")</td>
                        <td>@($"{(r.MinOccurs ?? 0)}..{(r.MaxOccurs == -1 ? "n" : r.MaxOccurs?.ToString() ?? "?")}")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-secondary">Şart listesi yok. “Şartları Yenile”ye basın.</p>
}
