@model MevzuatUygunluk.Models.ChecksVm
@{
    ViewData["Title"] = "Belge Denetleme";
}

<div class="container py-3">
    <h3 class="mb-3">Belge Denetleme</h3>
    <div class="row g-3">
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header">Belge Yükle ve Denetle</div>
                <div class="card-body">
                    <form asp-action="AnalyzeChecks" asp-controller="Docs" method="post" enctype="multipart/form-data" id="analyzeForm">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Senaryo</label>
                            <div class="d-flex flex-wrap gap-3">
                                @foreach (var opt in Model.ScenarioOptions)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Scenario" value="@opt.Value" @(opt.Value == Model.Scenario.ToString() ? "checked" : null) />
                                        <label class="form-check-label">@opt.Text</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fatura Tipi</label>
                            <select asp-for="InvoiceType" class="form-select" asp-items="Model.TypeOptions"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Dosyalar (çoklu / .zip destekli)</label>
                            <input type="file" name="Files" multiple class="form-control" />
                            <div class="form-text">PDF/Word/Resim yanında .zip yükleyebilirsiniz.</div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Denetle</button>
                            <a class="btn btn-outline-secondary" asp-action="ExportExcel">Excel</a>
                            <a class="btn btn-outline-secondary" asp-action="ExportPdf">PDF</a>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Error))
                        {
                            <div class="alert alert-danger mt-3">@Model.Error</div>
                        }

                        <hr class="my-4" />
                        <h6>Filtreler</h6>
                        <div class="row g-2">
                            <div class="col-6">
                                <select id="filterMust" class="form-select">
                                    <option value="">Zorunlu/Seçimli (hepsi)</option>
                                    <option value="true">Sadece Zorunlu</option>
                                    <option value="false">Sadece Seçimli</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <select id="filterPresent" class="form-select">
                                    <option value="">Durum (hepsi)</option>
                                    <option value="true">Bulunan</option>
                                    <option value="false">Bulunmayan</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between">
                    <span>Sonuçlar</span>
                    <span class="badge bg-secondary">@Model.Checks.Count Madde</span>
                </div>
                <div class="card-body">
                    @if (Model.Checks.Count == 0)
                    {
                        <div class="text-muted">Henüz sonuç yok.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle" id="resultsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Şart</th>
                                        <th class="text-center">Zorunlu</th>
                                        <th class="text-center">Durum</th>
                                        <th>Kanıt</th>
                                        <th>Sayfa</th>
                                        <th class="text-center">Güven</th>
                                        <th class="text-center">Ayrıntı</th>
                                        <th class="text-center">Düzelt</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model.Checks)
                                    {
                                        var rowClass = c.MustHave && !c.Present ? "row-missing" : "";
                                        <tr class="@rowClass" data-must="@c.MustHave.ToString().ToLower()" data-present="@c.Present.ToString().ToLower()">
                                            <td>@c.Requirement</td>
                                            <td class="text-center">@((c.MustHave) ? "Evet" : "Hayır")</td>
                                            <td class="text-center">@((c.Present) ? "Var" : "Yok")</td>
                                            <td>@(string.IsNullOrWhiteSpace(c.Evidence) ? "-" : c.Evidence)</td>
                                            <td>@(c.Pages == null ? "-" : string.Join(",", c.Pages))</td>
                                            <td class="text-center">@c.Confidence?.ToString("0.00")</td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm btn-outline-secondary btn-detail"
                                                        data-req="@c.Requirement"
                                                        data-law='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(c.LawRefs ?? new List<MevzuatUygunluk.Models.LawRef>()))'
                                                        data-files='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(c.EvidenceByFile ?? new List<MevzuatUygunluk.Models.FileEvidence>()))'>
                                                    Dayanak
                                                </button>
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm btn-outline-primary btn-feedback"
                                                        data-req="@c.Requirement">
                                                    Düzelt
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dayanak Modal -->
<div class="modal fade" id="modalDetail" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dayanak & Kanıt Ayrıntıları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="detailBody"></div>
            </div>
        </div>
    </div>
</div>

<!-- Düzelt Modal -->
<div class="modal fade" id="modalFeedback" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Bulguyu Düzelt</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <input type="hidden" id="fbReq" />
                <div class="mb-2">
                    <label class="form-label">Durum</label>
                    <select id="fbPresent" class="form-select">
                        <option value="">Seçiniz</option>
                        <option value="true">Var</option>
                        <option value="false">Yok</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label class="form-label">Kanıt (isteğe bağlı)</label>
                    <textarea id="fbEvidence" class="form-control" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="btnSendFb">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/checks.js"></script>
}
